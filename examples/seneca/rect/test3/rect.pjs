  stroke(255,0,0,0);
  fill(0,128,0,255);
  drawRect();

  stroke(255,128,0,0);
  fill(128,128,128, 128);
  drawRect(); 
 
  stroke(255,0,0,255);
  fill(128,128,128,128);
  drawRect();
  
  stroke(255,0,0,128);
  fill(128,128,198, 160);
  drawRect();
  
  stroke(255,0,0,32);
  fill(128,128,128,128);
  drawRect();
  
  
  ///////////////
  

  
  fill(255);
