void drawRect(){
  
  rect(currX, currY, RECT_SIZE, RECT_SIZE);

  if(counter % RECTS_PER_ROW == 0 && counter > 0){
    currX = START_X;
    currY += Y_OFFSET;
  }else{
    currX += X_OFFSET;
  }
    

  counter++;
}