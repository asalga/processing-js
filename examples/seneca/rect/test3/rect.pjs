import processing.opengl.*;

int START_X = 10;

int counter = 0;
int currX = START_X;
int currY = 10;

int RECTS_PER_ROW = 10;
int RECT_SIZE = 30;

int Y_OFFSET = 50;
int X_OFFSET = 50;

void setup()
{
  size(500,500, OPENGL);
  
 // background(55,77, 10);
//    background(150);

    background(0);

strokeWeight(6);

  // default
  drawRect();
  
  fill(0);
  drawRect();
  
  fill(0, 255);
  drawRect();
  
  fill(0, 128);
  drawRect();
  
  fill(0, 32);
  drawRect();

  fill(0, 0);  
  drawRect();

  fill(128,0,0,255);  
  drawRect();

  fill(128,0,0,128);
  drawRect();

  fill(128,0,0,64);
  drawRect();

  fill(128,0,0,32);
  drawRect();

  fill(128,0,0,0);
  drawRect();

  fill(128,0,0,0);
  drawRect();
  
  fill(128,128,0,255);
  drawRect();

  noStroke();
  fill(0,128,0,255);
